/* 表单 */
.container {
  background-color: white;
  margin: 10rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 5rpx rgb(207, 207, 207);

}

.container .common {
  border-bottom: 1rpx solid rgb(219, 219, 219);
}

/* 公共样式 */
.common {
  
  padding: 20rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;
}

.common .left {
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.common .left text {
  margin-left: 10rpx;
}

.common .icon {
  height: 50rpx;
  width: 50rpx;
}

.common .right {
  width: 400rpx;
  display: flex;
  justify-content: flex-end;
}

/* 打印原件 */
.fileSelected .right .item-right .select {
  border: 1rpx dashed gray;
  height: 100rpx;
  width: 100rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  margin-right: 20rpx;
}

.fileSelected .item-right {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.fileSelected .item-right image {
  width: 70rpx;
  height: 70rpx;
}

/* 地址 */
.address-wrap {
  height: 100rpx;
  justify-content: center;
}

.address-wrap button {
  border-radius: 60rpx;
  background-color: #1296db;
  color: white;
}

.address-wrap .address {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 页数 份数 */
input {
  text-align: right;
}

/* 是否双面 */
.picker {
  display: flex;
  align-items: center;
}

/* 注解 */
.note {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(224, 224, 224);
}

.note .icon {
  width: 50rpx;
  height: 50rpx;
}

.note .text {
  width: 590rpx;
  color: #1296db;
}
.wechat{
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /* border-bottom: 1rpx solid gray; */
}
.wechat .icon{
  width: 100rpx;
  height: 100rpx; 
}
.wechat .text{
  font-size: 60rpx;
  margin-left: 10rpx;
}
.wechat .copy{
  border: 1rpx solid #1296db;
  color: #1296db;
  margin-left: 20rpx;
  font-size: 30rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}
/* 提交 */
.submit{
  flex-direction: column !important;
}
.submit .text{
  font-size: 40rpx; 
  font-weight: 900;
}
.submit .price{
  color: red;
  font-weight: 700;
  padding: 10rpx;
}
.submit button{
  border-radius: 60rpx;
  background-color: #1296db;
  color: white;
}