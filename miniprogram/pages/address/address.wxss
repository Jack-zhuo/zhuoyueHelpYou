.none_spot{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.none_spot image{
   width: 200rpx;
   height: 170rpx;
}
.none_spot text{
  color: black;
  margin-top: 30rpx;
}

/* 地址栏区 */
.common {
  background-color: white;
  padding: 20rpx;
  border-radius: 30rpx;
  margin-top: 30rpx;
}

/* 地址内容区 */
.address .content .detail_addr {
  font-size: 40rpx;
  font-weight: 600;
}

.address .content .name {
  margin: 20rpx 0;
  font-size: 30rpx;
}

.address .content .name text:nth-child(2) {
  margin-left: 20rpx;
}
.address .content .name text:nth-child(3) {
  margin-left: 20rpx;
  background-color: #1296db;
  color: white;
  padding: 8rpx;
  font-size: 22rpx;
  border-radius: 10rpx;
}
/* 操作栏 */
.tool{
    border-top: 1rpx solid rgb(243, 243, 243);
    margin-top: 10rpx;
    padding-top: 15rpx;
    display: flex;
    justify-content: space-between;
  }
.tool radio .checked{
    color: rgb(7,193,96);
}
.tool text{
  border: 1rpx solid gray;
  padding: 6rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}
button{
  margin-top: 40rpx;
  background-color: #1296db;
  color: white;
  border-radius: 100rpx;
}