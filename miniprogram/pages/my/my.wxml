<view class="container">
  <!-- 个人信息区 -->
  <view class="info" bindtap="setInfo">
    <image class="avator" src="{{ user.info.avatar }}"></image>
    <view class="name">
      <text>{{ user.info.name }}</text>
    </view>
    <image class="arrow" src="../../images/arrow.png"></image>
  </view>

  <view class="content_wrap">
    <!-- 我的地址 -->
    <view class="cell address" bindtap="gotoAddress">
      <view class="cell-l">
        <image src="../../images/spot.png"></image>
        <text>我的地址</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 三天内自动完成 -->
    <view class="cell service" bindtap="completeAfterFiveDay" wx:if="{{isAdmin}}">
      <view class="cell-l">
        <image src="../../images/help.jpg"></image>
        <text>三天内自动完成</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 订单管理 -->
    <view class="cell" bindtap="gotoOrderManagement" wx:if="{{isAdmin}}">
      <view class="cell-l">
        <image src="../../images/help.jpg"></image>
        <text>订单管理</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 提现管理 -->
    <view class="cell" bindtap="gotoWithdraw" wx:if="{{isAdmin}}">
      <view class="cell-l">
        <image src="../../images/help.jpg"></image>
        <text>提现管理</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 审核接单员 -->
    <view class="cell" bindtap="gotoCheckOrderer" wx:if="{{isAdmin}}">
      <view class="cell-l">
        <image src="../../images/help.jpg"></image>
        <text>审核接单员</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 客服微信 -->
    <view class="cell service" bindtap="openService">
      <view class="cell-l">
        <image src="../../images/wechat.png"></image>
        <text>客服微信</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 关于我们 -->
    <view class="cell" bindtap="gotoAboutUs">
      <view class="cell-l">
        <image src="../../images/aboutus.png"></image>
        <text>关于我们</text>
      </view>
      <view class="cell-r">
        <image src="../../images/arrow_gray.png"></image>
      </view>
    </view>
    <!-- 当前版本 -->
    <view class="cell version">
      <view class="cell-l">
        <image src="../../images/version.png"></image>
        <text>当前版本</text>
      </view>
      <view class="cell-r">
        3.5.12
      </view>
    </view>
  </view>

</view>